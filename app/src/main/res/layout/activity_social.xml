<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="16dp"
    tools:context=".ActivityEm1">

    <!-- Neumorphic Button -->
    <soup.neumorphism.NeumorphCardView
        app:neumorph_shadowColorDark="@color/purple_200"
        app:neumorph_shadowColorLight="@color/purple_200"
        android:layout_marginTop="25sp"
        android:id="@+id/neumorph_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"

        android:focusable="true"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_lightSource="leftTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/fb" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />


            </LinearLayout>

        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>



    <!-- Neumorphic Button -->
    <soup.neumorphism.NeumorphCardView
        app:neumorph_shadowColorDark="@color/purple_200"
        app:neumorph_shadowColorLight="@color/purple_200"
        android:layout_marginTop="25sp"
        android:id="@+id/neumorph_button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"

        android:focusable="true"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_lightSource="leftTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/instra" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instragram"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />


            </LinearLayout>

        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>



    <!-- Neumorphic Button -->
    <soup.neumorphism.NeumorphCardView
        app:neumorph_shadowColorDark="@color/purple_200"
        app:neumorph_shadowColorLight="@color/purple_200"
        android:layout_marginTop="25sp"
        android:id="@+id/neumorph_button_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"

        android:focusable="true"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_lightSource="leftTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/link" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linkdin"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />


            </LinearLayout>

        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>


    <!-- Neumorphic Button -->
    <soup.neumorphism.NeumorphCardView
        app:neumorph_shadowColorDark="@color/purple_200"
        app:neumorph_shadowColorLight="@color/purple_200"
        android:layout_marginTop="25sp"
        android:id="@+id/neumorph_button_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"

        android:focusable="true"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_backgroundColor="@color/white"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_lightSource="leftTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/songImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/twitter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twitter"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />


            </LinearLayout>

        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>





</LinearLayout>

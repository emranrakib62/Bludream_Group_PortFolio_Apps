<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="16dp"
    tools:context=".ActivityEm1">

    <!-- Neumorphic Button -->
    <soup.neumorphism.NeumorphCardView
        app:neumorph_shadowColorDark="@color/teal_700"
        app:neumorph_shadowColorLight="@color/purple_200"
        android:layout_marginTop="250dp"
        android:id="@+id/neumorph_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowElevation="6dp"
        app:neumorph_backgroundColor="@color/black"
        app:neumorph_cornerFamily="rounded"
        app:neumorph_cornerSize="16dp"
        app:neumorph_lightSource="leftTop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/songImage"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/download1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="হকার থেকে শত কোটির মালিক I Branding Bangladesh"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/songSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio of Creative Arts ltd"
                    android:textSize="14sp"
                    android:textColor="#FAF3F3" />
            </LinearLayout>

        </LinearLayout>
    </soup.neumorphism.NeumorphCardView>

</LinearLayout>
